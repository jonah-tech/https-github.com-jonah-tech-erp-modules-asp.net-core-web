@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container IndexDiv">

    <div class="row">
        <div class="col-3 container CenteredContainer text-center">
            <section>
                <form id="account" method="post">
                    <h5 class="text-white">Welcome</h5>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Input.UserName" class="form-control" placeholder="Email / UserName" />
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" style="width:auto;" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-danger text-white" value="Log in">
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>



    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
